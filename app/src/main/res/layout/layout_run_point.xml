<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_run_point"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_weight="0.5"
    android:gravity="center"
    android:orientation="horizontal"
    android:padding="2dp">

    <!-- Container for point definitions -->
    <LinearLayout
        android:id="@+id/layout_points"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:padding="1dp">

        <!-- Start Point (editable) -->
        <LinearLayout
            android:id="@+id/layout_start_point"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="1dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Điểm bắt đầu"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingTop="1dp">

                <EditText
                    android:id="@+id/etStartX"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:hint="X"
                    android:inputType="number" />

                <EditText
                    android:id="@+id/etStartY"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:hint="Y"
                    android:inputType="number"
                    android:layout_marginStart="2dp" />

                <EditText
                    android:id="@+id/etStartZ"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:hint="Z"
                    android:inputType="number"
                    android:layout_marginStart="2dp" />

            </LinearLayout>
        </LinearLayout>

        <!-- End Point (editable) -->
        <LinearLayout
            android:id="@+id/layout_end_point"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="1dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Điểm kết thúc"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingTop="1dp">

                <EditText
                    android:id="@+id/etEndX"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:hint="X"
                    android:inputType="number" />

                <EditText
                    android:id="@+id/etEndY"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:hint="Y"
                    android:inputType="number"
                    android:layout_marginStart="2dp" />

                <EditText
                    android:id="@+id/etEndZ"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:hint="Z"
                    android:inputType="number"
                    android:layout_marginStart="2dp" />

            </LinearLayout>
        </LinearLayout>

        <!-- Actual Point (view only) -->
        <LinearLayout
            android:id="@+id/layout_actual_point"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="1dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Thực tế"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingTop="1dp">

                <TextView
                    android:id="@+id/tvActualX"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:hint="X" />

                <TextView
                    android:id="@+id/tvActualY"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:hint="Y"
                    android:layout_marginStart="2dp" />

                <TextView
                    android:id="@+id/tvActualZ"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:hint="Z"
                    android:layout_marginStart="2dp" />

            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

    <!-- Container for action controls -->
    <LinearLayout
        android:id="@+id/layout_actions"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:padding="1dp"
        android:layout_marginTop="1dp">

        <!-- Spinner for function selection -->
        <Spinner
            android:id="@+id/spinnerFunctions"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:entries="@array/function_list" />

        <!-- Run button -->
        <Button
            android:id="@+id/btnRunFunction"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Chạy"
            android:layout_marginStart="16dp" />

    </LinearLayout>

</LinearLayout>