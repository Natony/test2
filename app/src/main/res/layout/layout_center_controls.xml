<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/centerControls"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="1.5"
    android:padding="4dp">

    <!-- Top controls: Power, Position, Buzzer, Lock -->
    <LinearLayout
        android:id="@+id/topControls"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.25"
        android:orientation="horizontal"
        android:weightSum="4"
        android:gravity="center">

        <!-- Power -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:gravity="center">
            <ImageButton
                android:id="@+id/btnPower"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/ic_power_off"
                android:background="?android:attr/selectableItemBackgroundBorderless"
                android:scaleType="fitCenter"
                android:contentDescription="Nguồn" />
        </LinearLayout>

        <!-- Position -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="match_parent"
            android:gravity="center">
            <ImageButton
                android:id="@+id/btnPosition"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/ic_direction_a"
                android:background="?android:attr/selectableItemBackgroundBorderless"
                android:scaleType="fitCenter"
                android:contentDescription="Vị trí" />
        </LinearLayout>

        <!-- Buzzer -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:gravity="center">
            <ImageButton
                android:id="@+id/btnBuzzer"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/ic_buzzer_off"
                android:background="?android:attr/selectableItemBackgroundBorderless"
                android:scaleType="fitCenter"
                android:contentDescription="Buzzer" />
        </LinearLayout>

    </LinearLayout>

    <!-- Center Shuttle (red) -->
    <LinearLayout
        android:id="@+id/centerShuttle"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:gravity="center">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:gravity="center">
            <ImageView
                android:id="@+id/shuttleRed"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/ic_red"
                android:scaleType="fitCenter"
                android:contentDescription="Shuttle Red" />
        </LinearLayout>

    </LinearLayout>

    <!-- Bottom controls: Mode, EmergencyStop, CountPallet -->
    <LinearLayout
        android:id="@+id/bottomControls"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.25"
        android:orientation="horizontal"
        android:weightSum="4"
        android:gravity="center">

        <!-- Mode -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:gravity="center"
            android:padding="8dp">
            <ImageButton
                android:id="@+id/btnMode"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/ic_mode_auto"
                android:background="?android:attr/selectableItemBackgroundBorderless"
                android:scaleType="fitCenter"
                android:contentDescription="Chế độ" />
        </LinearLayout>

        <!-- Emergency Stop -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="match_parent"
            android:gravity="center">
            <ImageButton
                android:id="@+id/btnEmergencyStop"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/ic_emergency_stop"
                android:background="?android:attr/selectableItemBackgroundBorderless"
                android:scaleType="fitCenter"
                android:contentDescription="Emergency Stop" />
        </LinearLayout>

        <!-- Count Pallet -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:gravity="center">
            <ImageButton
                android:id="@+id/btnCountPallet"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/ic_count_pallet_on"
                android:background="?android:attr/selectableItemBackgroundBorderless"
                android:scaleType="fitCenter"
                android:contentDescription="Đếm Pallet" />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>